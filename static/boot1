print("cc-turtle-bot (C) 2015 Collin Eggert\nLicensed as GPLv3\ngithub.com/AHelper/cc-turtle-bot\nboot1") if shell.getRunningProgram() ~= "startup" then fs.delete("/startup") fs.copy(shell.getRunningProgram(), "/startup") end f=io.open("/boot2","w") h=http.get("http://localhost:34299/static/boot2") if not h then error("Server down!") end f:write(h:readAll()) f:close() h:close() shell.run("/boot2")